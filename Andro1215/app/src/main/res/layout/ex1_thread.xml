<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Ex1_Thread"
    android:orientation="vertical">

    <TextView
        android:text="Thread Test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:text="Thread For"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ex1_for"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <TextView android:text="Thread Back" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex1_back"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ex1_back" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click"
        android:id="@+id/ex1_btn"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ex1_btn2"
        android:text="Stop"

        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ex1_btn3"
        android:text="Start"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
